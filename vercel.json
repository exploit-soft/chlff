{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/sound/(.*)",
      "dest": "/sound/$1",
      "headers": {
        "Content-Type": "audio/mpeg"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
